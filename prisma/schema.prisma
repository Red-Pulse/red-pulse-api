generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BloodType {
  id        Int    @id @default(autoincrement())
  shortName String @unique
  longName  String @unique
  type      String @unique
  users     User[]
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  phone       String
  otp         String?
  bloodTypeId Int
  bloodType   BloodType @relation(fields: [bloodTypeId], references: [id])
}
